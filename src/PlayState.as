		override public function update():void
		{
			FlxU.overlap(_coin, player, getCoin);
			if(FlxG.keys.justPressed("Z")){
				if(player.getMissile()){
					spawnMissile(player.getSpawnPt(),player.getDirection());
				}
			}
			super.update();
			
			//Check for player lose conditions
			if(player.y > level.height)
			{
				FlxG.score = 1; //sets status.text to "Aww, you died!"
				FlxG.state = new PlayState();
				return;
			}
			
			
			//Check to see if the player touched the exit door this frame
			//FlxU.overlap(exit,player,win);
			
			//Finally, bump the player up against the level
			FlxU.collide(level,player);
		}
		public function getCoin(coin:Coin, player:Player):void
		{
			coin.kill();
			FlxG.score+=1;
			_scoreText.text=FlxG.score.toString();
			player.setMissile(true);
		}
		public function spawnCoin():void
		{
			var coin: Coin = new Coin(30,30);
			_coin.add(coin);
		}
		public function spawnMissile(p:FlxPoint, d:Number):void
		{
			var missile: Missile = new Missile(p.x,p.y,d);
			_missile.add(missile);
		}
		
